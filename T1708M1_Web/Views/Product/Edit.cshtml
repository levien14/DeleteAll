@model T1708M1_Web.Models.Product
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Update" method="post">
    <input name="id" type="hidden" value="@Model.id"/>
    <div class="form-group">
        <label>Name</label>
        <input name="Name" type="text" value="@Model.Name" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Price</label>
        <input name="price" type="text" value="@Model.Price" class="form-control"/>
    </div>
    <div>
        <a href="/Product/Index">Back to List</a>
        <input type="submit" value="Update" class="btn btn-primary mb-2">
    </div>
</form>

